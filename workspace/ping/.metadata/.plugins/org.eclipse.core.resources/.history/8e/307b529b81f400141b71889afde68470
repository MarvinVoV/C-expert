#include "yamorn.h"

void alarm_handle(int);

int main(void){
	Signal(SIGALRM,alarm_handle);
	alarm_handle(SIGALRM); /* first trigger */
	for(;;){
		sleep(1);
	}
}

void alarm_handle(int signo){
	printf("trigger alarm.\n");

	alarm(1); /* trigger every one second */

	return;
}

